{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "bmiappName": {
      "type": "string",
      "minLength": 1
    },
    "bmiappSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "bmiappAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "bmiappAdminLoginPassword": {
      "type": "securestring"
    },
    "bmidocumentsType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "bmidocumentsName": {
      "type": "string"
    },
    "bmiappCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "bmiappEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "bmiappRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('bmiappName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [ ],
      "tags": {
        "displayName": "bmiapp"
      },
      "properties": {
        "administratorLogin": "[parameters('bmiappAdminLogin')]",
        "administratorLoginPassword": "[parameters('bmiappAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('bmiappName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('bmiappName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('bmiappName'))]"
          ],
          "tags": {
            "displayName": "bmiapp"
          },
          "properties": {
            "collation": "[parameters('bmiappCollation')]",
            "edition": "[parameters('bmiappEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('bmiappRequestedServiceObjectiveName')]"
          }
        }
      ]
    },
    {
      "name": "[parameters('bmiappName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('bmiappName')))]": "Resource",
        "displayName": "bmiapp"
      },
      "properties": {
        "name": "[parameters('bmiappName')]"
      }
    },
    {
      "name": "[parameters('bmidocumentsName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('bmidocumentsType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "bmidocuments"
      },
      "kind": "Storage"
    }],
  "outputs": {}
}
